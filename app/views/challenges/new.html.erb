<h1>New Challenge Page</h1>

<%= form_for(@challenge) do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title  %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.label :language %>
  <%= f.select :language_id, @languages.map {|language| [language.name, language.id] } %>

  <%= f.submit 'Create Challenge' %>
<% end %>

<%= link_to 'Back', :back %>
<%= link_to 'View All Challenges', challenges_path %>
