<h1>Edit Challenge Page</h1>

<%= form_for(@challenge) do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title, value: @challenge.title  %>

  <%= f.label :description %>
  <%= f.text_field :description, value: @challenge.description %>

  <%= f.submit 'Save' %>
<% end %>

<%= link_to 'Back', :back %>
<%= link_to 'View All Challenges', challenges_path %>

